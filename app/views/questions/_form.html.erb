<%= simple_nested_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%# f.input :content %>
    <%= f.simple_fields_for :options do |options_form| %>
      <%= options_form.text_field :content %>
      <%= options_form.link_to_remove "Remove this option" %>
    <% end %>
    <p><%= f.link_to_add "Add an option", :options %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
