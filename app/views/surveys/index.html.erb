<p id="notice"><%= notice %></p>

<h1>Surveys</h1>
<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= link_to 'Open Survey', survey, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'New Survey', new_survey_path %>
