<p id="notice"><%= notice %></p>

<p>
  <strong>Survery Name:</strong>
  <%= @survey.name %>
</p>


<h4>Add Questions:</h4>
<%= nested_form_for([@survey, @survey.questions.build]) do |f| %>
	<p>
		<%= f.label 'Question' %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :survey_id %><br>
		<%= f.text_field :survey_id %>
	</p>
	<p>
		<%= f.fields_for :options do |option_form| %>
			<%= option_form.text_field :name %>
			<%= option_form.link_to_remove "Remove this option" %>
		<% end %>
		<p><%= f.link_to_add "Add a Option", :options %></p>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<h2>Questions</h2>
<% sorting_question(@survey.id).each do |question| %>
<p>
  <strong>Question ID</strong>
  <%= question.id %>
</p>
<p>
  <strong>survey_id:</strong>
  <%= question.survey_id %>
</p>
<p>
  <strong>title:</strong>
  <%= question.title %>
</p>
<h2> options: </h2>
	<% sort_options(question.id).each do |option| %>
<!-- 		<p>
		<strong>Question ID</strong>
		<%# option.question_id %>
		</p> -->

		<p>
		<%= option.name %>
		</p>
	<% end %><hr>
<% end %>


<%= link_to 'Edit', edit_survey_path(@survey) %> |
<%= link_to 'Back', surveys_path %>

